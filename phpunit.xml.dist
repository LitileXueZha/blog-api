<?xml version="1.0" encoding="UTF-8" ?>

<phpunit bootstrap="config.php" colors="true">
    <testsuites>
        <testsuite name="单元测试（工具类）">
            <directory>tests/kits/</directory>
        </testsuite>
        <testsuite name="单元测试（数据模型）">
            <directory>tests/models/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">src/kits/</directory>
            <directory suffix=".php">src/models/</directory>
            <file>src/app.php</file>
            <file>src/route.php</file>
        </whitelist>
    </filter>
</phpunit>
